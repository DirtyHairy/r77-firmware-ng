menuconfig AW_AXP
	bool "AXP Power drivers"
	depends on REGULATOR
	default y
	---help---
	This option allows you to select AXP power driver

if AW_AXP

config AW_AXP81X
	bool "AXP81X driver"
	depends on SUNXI_ARISC
	---help---
	AXP81X driver

menuconfig AW_AXP22
	bool "AXP22 driver"
	depends on SUNXI_ARISC
	---help---
	AXP22 driver

if AW_AXP22
config AXP809
	bool "AXP809 chip"
	depends on AW_AXP22
	---help---
	AXP809 driver
endif

config AW_AXP19
	bool "AXP19 driver"
	depends on I2C
	---help---
	AXP19 driver

config AW_AXP15
	bool "AXP15 driver"
	depends on SUNXI_ARISC
	---help---
	AXP15 driver

if AW_AXP15
config AXP15_IRQ
	tristate "AXP15 irq driver"
	default n
	depends on AW_AXP15
	---help---
	The irq driver for AXP808,
	When use AXP808 as the primary power manage IC,
	Need to enable.
endif

config AW_AXP20
	bool "AXP20 driver"
	depends on I2C
	depends on AXP_TWI_USED
	---help---
	AXP20 driver
	
if AW_AXP20
choice
	prompt "AXP calculate type:"
	default AW_AXP20_COU

	config AW_AXP20_COU
		bool "COULOMB"
		---help---
			AXP driver for coulomb
	config AW_AXP20_OCV
		bool "OCV"
		---help---
			AXP driver for ocv

endchoice
endif # !AW_AXP20
	
config AXP_CHARGEINIT
	bool "AXP initial charging environment set"
	default y

config AXP_CHGCHANGE
	bool "AXP charging current set when suspend\resume\shutdown"
	default y

config AXP_TWI_USED
	bool "AXP use twi as transfer channel"
	default n
	
endif # !AW_AXP
